{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:cypress/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": [
    "react",
    "prettier",
    "cypress"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "jsxSingleQuote": true,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ],
    "react-hooks/exhaustive-deps": "off",
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used",
        "varsIgnorePattern": "_"
      }
    ],
    "import/order": "off",
    "import/no-unresolved": "off",
    "import/no-mutable-exports": "off",
    "react/jsx-filename-extension": "off",
    "react/react-in-jsx-scope": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "no-nested-ternary": "off"
  }
}